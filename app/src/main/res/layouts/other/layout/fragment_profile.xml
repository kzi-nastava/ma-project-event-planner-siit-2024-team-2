<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Profile Picture -->
        <ImageView
            android:id="@+id/ivProfilePicture"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/profile_picture"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:contentDescription="Profile Picture" />

        <Button
            android:id="@+id/btnUploadPicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload New Picture"
            android:layout_gravity="center_horizontal"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnRemovePicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove Picture"
            android:layout_gravity="center_horizontal"
            android:visibility="gone" />

        <!-- User Info -->
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email@example.com"
            android:layout_gravity="center_horizontal"/>

        <!-- Personal Info -->
        <EditText
            android:id="@+id/etFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First Name"/>

        <EditText
            android:id="@+id/etLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last Name"/>

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone"/>

        <EditText
            android:id="@+id/etAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"/>

        <Button
            android:id="@+id/btnUpdatePersonalInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Personal Info"
            android:layout_gravity="center_horizontal"/>

        <!-- Company Info -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Company Info"
            style="@style/TextAppearance.AppCompat.Headline"/>
        <EditText
            android:id="@+id/etCompanyName"
            android:hint="Company Name"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etCompanyAddress"
            android:hint="Company Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btnUpdateCompany"
            android:text="Update Company Info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Favorite Events -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Favorite Events"
            style="@style/TextAppearance.AppCompat.Headline"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvFavoriteEvents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Favorite Service Products -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Favorite Service Products"
            style="@style/TextAppearance.AppCompat.Headline"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvFavoriteServiceProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Change Password -->
        <EditText
            android:id="@+id/etOldPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Old Password"
            android:inputType="textPassword"/>

        <EditText
            android:id="@+id/etNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="New Password"
            android:inputType="textPassword"/>

        <EditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm New Password"
            android:inputType="textPassword"/>

        <Button
            android:id="@+id/btnChangePassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:layout_gravity="center_horizontal"/>

        <!-- Deactivate Account -->
        <Button
            android:id="@+id/btnDeactivateAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deactivate Account"
            android:textColor="@android:color/holo_red_dark"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>
